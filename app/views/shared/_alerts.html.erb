<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Seamus Narrons Portfolio", sticky: false) %>
  <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Seamus Narrons Portfolio", sticky: false) %>
  <% else %>
    <%= js add_gritter(flash[:notice], title: "Seamus Narrons Portfolio", sticky: false) %>
<% end %>